<div class="main-container">
    <div class="header">
        <h1>Edit Me!</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users">Users</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users/{{user._id}}">{{user.username}}</a>
            </li>
            <li class="breadcrumb-item active">Edit User</li>
        </ol>
    </div>
    <div class="form-container">
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
            <div class="form-row">
                <label for="username">Username</label>
                <input type="text" name="username" value={{user.username}} />
            </div>
            <div class="form-row">
                <label for="profilePicture">Profile Picture URL</label>
                <input type="text" name="profilePicture" />
            </div>
            <div class="form-row">
                <label for="favoriteBeer">Favorite Beer</label>
                <input type="text" name="favoriteBeer" value={{user.favoriteBeer}} />
            </div>
            <div class="form-row">
                <label for="favoriteBrewery">Favorite Brewery</label>
                <input type="text" name="favoriteBrewery" value={{user.favoriteBrewery}} />
            </div>

            <button type="submit" class="btn yellowBtn">Update User</button>
        </form>
        <form action="/users/{{user._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn redBtn">Delete User</button>
        </form>
    </div>

</div>