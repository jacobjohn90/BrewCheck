<div class="main-container">
    <div class="header">
        <h1>Create New User</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users">Users</a>
            </li>
            <li class="breadcrumb-item active">New User</li>
        </ol>
    </div>
    <div class="form-container">
        <form action="/users" method="POST">
            <div class="form-row">
                <label for="username">Username</label>
                <input type="text" name="username" placeholder="Username" />
            </div>
            <div class="form-row">
                <label for="profilePicture">Profile Picture URL</label>
                <input type="text" name="profilePicture" />
            </div>
            <div class="form-row">
                <label for="favoriteBeer">Favorite Beer</label>
                <input type="text" name="favoriteBeer" placeholder="Favorite Beer" />
            </div>
            <div class="form-row">
                <label for="favoriteBrewery">Favorite Brewery</label>
                <input type="text" name="favoriteBrewery" placeholder="Favorite Brewery" />
            </div>

            <button type="submit">Save User</button>
        </form>
    </div>
</div>