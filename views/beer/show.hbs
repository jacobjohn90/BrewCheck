<div class="main-container">
    <div class="header">
        <h1>{{beer.name}}</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users">Users</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users/{{user._id}}">{{user.username}}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users/{{user._id}}/breweries">BrewCheck</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users/{{user._id}}/breweries/{{brewery._id}}">{{brewery.nameOfBrewery}}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/users/{{user._id}}/breweries/{{brewery._id}}/beers">Beers</a>
            </li>
            <li class="breadcrumb-item active">{{beer.name}}</li>
        </ol>
    </div>
    <div class="show-container">
        <div class="showText">
            <p>Type: {{beer.type}}</p>
            <p>ABV: {{beer.abv}}</p>
            <p>Have you tried this beer yet? {{beer.tried}}</p>
            <p>Rating: {{beer.rating}}</p>
            <a href="/users/{{user._id}}/breweries/{{brewery._id}}/beers/{{beer._id}}/edit" class="btn yellowBtn" id="showBeerBtn">Edit Beer Info</a>
        </div>
    </div>
</div>